<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" client="site" method="upgrade">
        <name>BuaXua Floating Module</name> 
        <author>buaxua.vn</author> 
        <creationDate>Apr-10-2012</creationDate> 
        <copyright>buaxua.vn</copyright> 
        <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license> 
        <authorEmail>contact@buaxua.vn</authorEmail> 
        <authorUrl>www.buaxua.vn</authorUrl> 
        <version>2.5.0v1</version> 
        <description>MOD_BUAXUA_FLOATING_XML_DESCRIPTION</description>
        <files>
            <filename module="mod_buaxua_floating">mod_buaxua_floating.php</filename>
			<filename>index.html</filename>
			<filename>buaxua_floating.js</filename>
        </files>
		<languages folder="language">
			<language tag="en-GB">en-GB/en-GB.mod_buaxua_floating.ini</language>
			<language tag="en-GB">en-GB/en-GB.mod_buaxua_floating.sys.ini</language>
			<language tag="vi-VN">vi-VN/vi-VN.mod_buaxua_floating.ini</language>
			<language tag="vi-VN">vi-VN/vi-VN.mod_buaxua_floating.sys.ini</language>
		</languages>
   	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="maincontentw" type="text" default="1050" label="MOD_BUAXUA_FLOATING_PAGE_WIDTH_LABEL" description="MOD_BUAXUA_FLOATING_PAGE_WIDTH_DESC" />
				<field name="fspeed" type="text" default="20" label="MOD_BUAXUA_FLOATING_SPEED_LABEL" description="MOD_BUAXUA_FLOATING_SPEED_DESC" />
				<field type="spacer" label="&lt;hr &#47;&gt;" />
				<field name="leftpos" type="list" default="0" label="MOD_BUAXUA_FLOATING_LEFT_POSITION_LABEL" description="MOD_BUAXUA_FLOATING_LEFT_POSITION_DESC">
					<option value="0">MOD_BUAXUA_FLOATING_TOP_POSITION</option>
					<option value="1">MOD_BUAXUA_FLOATING_CENTER_POSITION</option>
					<option value="2">MOD_BUAXUA_FLOATING_BOTTOM_POSITION</option>
				</field>
				<field name="leftboxw" type="text" default="100" label="MOD_BUAXUA_FLOATING_LEFT_BOX_WIDTH_LABEL" description="MOD_BUAXUA_FLOATING_LEFT_BOX_WIDTH_DESC" />
				<field name="leftboxh" type="text" default="100" label="MOD_BUAXUA_FLOATING_LEFT_BOX_HEIGHT_LABEL" description="MOD_BUAXUA_FLOATING_LEFT_BOX_HEIGHT_DESC" />
				<field name="leftadjust" type="text" default="5" label="MOD_BUAXUA_FLOATING_LEFT_BOX_MARGIN_LABEL" description="MOD_BUAXUA_FLOATING_LEFT_BOX_MARGIN_DESC" />
				<field name="left_position" type="text" default="buaxua_leftbox" label="MOD_BUAXUA_FLOATING_LEFT_BOX_POSITION_LABEL" description="MOD_BUAXUA_FLOATING_LEFT_BOX_POSITION_DESC" />
				<field name="leftboxcss" type="textarea" cols="30" rows="5" default="border:1px solid #cccccc;" label="MOD_BUAXUA_FLOATING_LEFT_BOX_CSS_LABEL" description="MOD_BUAXUA_FLOATING_LEFT_BOX_CSS_DESC" />
				<field type="spacer" label="&lt;hr &#47;&gt;" />
				<field name="rightpos" type="list" default="0" label="MOD_BUAXUA_FLOATING_RIGHT_POSITION_LABEL" description="MOD_BUAXUA_FLOATING_RIGHT_POSITION_DESC">
					<option value="0">MOD_BUAXUA_FLOATING_TOP_POSITION</option>
					<option value="1">MOD_BUAXUA_FLOATING_CENTER_POSITION</option>
					<option value="2">MOD_BUAXUA_FLOATING_BOTTOM_POSITION</option>
				</field>
				<field name="rightboxw" type="text" default="100" label="MOD_BUAXUA_FLOATING_RIGHT_BOX_WIDTH_LABEL" description="MOD_BUAXUA_FLOATING_RIGHT_BOX_WIDTH_DESC" />
				<field name="rightboxh" type="text" default="100" label="MOD_BUAXUA_FLOATING_RIGHT_BOX_HEIGHT_LABEL" description="MOD_BUAXUA_FLOATING_RIGHT_BOX_HEIGHT_DESC" />
				<field name="rightadjust" type="text" default="5" label="MOD_BUAXUA_FLOATING_RIGHT_BOX_MARGIN_LABEL" description="MOD_BUAXUA_FLOATING_RIGHT_BOX_MARGIN_DESC" />
				<field name="right_position" type="text" default="buaxua_rightbox" label="MOD_BUAXUA_FLOATING_RIGHT_BOX_POSITION_LABEL" description="MOD_BUAXUA_FLOATING_RIGHT_BOX_POSITION_DESC" />
				<field name="rightboxcss" type="textarea" cols="30" rows="5" default="border:1px solid #cccccc;" label="MOD_BUAXUA_FLOATING_RIGHT_BOX_CSS_LABEL" description="MOD_BUAXUA_FLOATING_RIGHT_BOX_CSS_DESC" />
			</fieldset>
			<fieldset name="advanced">
				<field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field name="cache" type="list" default="1" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field name="cache_time" type="text" default="900" label="COM_MODULES_FIELD_CACHE_TIME_LABEL" description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field name="cachemode"	type="hidden" default="static">
					<option value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>