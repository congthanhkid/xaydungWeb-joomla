	  <field name="delay" type="text" default="5000" label="Delay" description="Delay between images in ms" />
	  <field name="stripDelay" type="text" default="50" label="Strip delay" description="Delay beetwen strips in ms" />
	  <field name="position" type="list" default="bottom" label="Position" description="Position of strips">
			<option value="top">Top</option>
