<?xml version="1.0" encoding="utf-8"?>
<install method="upgrade" type="module" version="1.5">
	<name>[JoomlaVision] Conten Fusion</name>
	<author>JoomlaVision</author>
	<creationDate>10/22/2009</creationDate>
	<copyright>Copyright (C) 2008 http://www.JoomlaVision.com. All rights reserved.</copyright>
	<license>JoomlaVision</license>
	<authorEmail>webmaster@joomvision.com</authorEmail>
	<authorUrl>www.joomvision.com</authorUrl>
	<version>1.5.x</version>
	<description>[JoomlaVision] Conten Fusion www.joomvison.com</description>	
	<files>
		<filename module="mod_jv_contenfusion">mod_jv_contenfusion.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>thumbnail.inc.php</filename>
		<folder>tmpl/</folder>
		<folder>assets/</folder>
	</files>

	<params>
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
	  	<param name="content" type="list" default="com_content" label="Load Content from" description="LOAD CONTENT">
			<option value="com_content">Content</option>
			<option value="com_k2">K2</option>
		</param>
		<param name="itemsOrdering" type="list" default="" label="Item K2 Ordering" description="ITEM K2 ORDERING">
			<option value="">Default</option>
			<option value="date">Oldest first</option>
			<option value="rdate">Most recent first</option>
			<option value="alpha">Title Alphabetical</option>
			<option value="ralpha">Title Reverse-Alphabetical</option>
			<option value="order">Ordering</option>
			<option value="hits">Most popular</option>
			<option value="best">Highest rated</option>
			<option value="rand">Random ordering</option>
		</param>
	  	<param name="slide" type="radio" default="1" label="Enable Slide" description="ENABLE SLIDE">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	  	<param name="tooltips" type="radio" default="1" label="Enable Tooltips" description="ENABLE TOOLTIPS">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="count" type="text" default="10" label="Count" description="The number of items to display (default 10)" />
		<param name="height" type="text" default="360" label="Height" description="Height of Headline" />
		<param name="width" type="text" default="360" label="Width" description="Width of Headline" />
		<param name="catid" type="text" default="" label="Category ID" description="PARAMCATEGORYID" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="thumbsize" type="text" default="60" label="Image thumb size" description="Image thumb size" />
		<param name="intro_lenght" type="text" default="300" label="Introtext Lenghit" description="Introtext Lenght" />
		<param name="timming" type="text" default="5000" label="Delay Time" description="Time delay between each content" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="event_type" type="list" default="mouseover" label="Event type" description="Event type">
			<option value="click">Click</option>
			<option value="mouseover">Mouseover</option>
		</param>
	</params>
</install>
