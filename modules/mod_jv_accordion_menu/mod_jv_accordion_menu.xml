<install type="module" version="1.5.0">
     <name>JV Accordion Menu</name>
     <author>JoomlaVision</author>
     <creationDate>Jun 17, 2010</creationDate>
     <copyright>Copyright (c) 2006 - 2009 JoomlaVision. All rights reserved.</copyright>
     <license>JoomlaVision</license>
     <authorEmail>info@joomlavision.com</authorEmail>
     <authorUrl>www.joomlavision.com</authorUrl>
     <version>1.5.3</version>
     <description><![CDATA[JV Accordion Menu developed by <a href="http://www.joomlavision.com" title="Joomla Templates">www.joomlavison.com</a>]]></description>
     <files>
          <filename module="mod_jv_accordion_menu">mod_jv_accordion_menu.php</filename>
		  <filename>helper.php</filename>
		<filename>changelog.txt</filename>
		  <folder>assets</folder>
		  <folder>tmpl</folder>		 
     </files>  	
     <params>      	
        <param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />       
        <param name="menutype" type="mos_menu" default="mainmenu" label="Menu Name" description="The name of the menu (default is `mainmenu`)" />
        <param name="event_type" type="radio" default="0" label="Event type" description="Event type">
        	<option value="0">Hover</option>
        	<option value="1">Click</option>        
        </param>
        <param name="follow_current_menu" default="0" type="radio" label="Follow Item By Current Menu" description="Follow Item By Current Menu">
        	<option value="0">No</option>
          	<option value="1">Yes</option>
        </param>
        <param name="is_exppand_active" type="list" default="0" label="Expand item's child"  description="Expand item's child when activing menu">
        	<option value="0">Hide</option>
        	<option value="1">Show</option>
        </param> 
        <param name="start_level" type="text" default="0" label="Start level" description="Start level" />
        <param name="end_level" type="text" default="0" label="End level" description="End level" />
        <param name="is_slide" type="radio" default="0" label="Slide" description="Use this option to make it possible to open more than one sub menu item at the same time">
          <option value="0">No</option>
          <option value="1">Yes</option>
        </param>    
	</params>		
       <params group="advanced">
        <param name="cache" type="list" default="0" label="Caching" description="Select whether to cache the content of this module">
            <option value="1">Use global</option>
            <option value="0">No caching</option>
        </param>
        <param name="cache_time" type="text" default="900" label="Cache Time" description="The time before the module is recached" />
    </params>
</install>
